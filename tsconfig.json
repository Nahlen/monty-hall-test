{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "rootDir": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "./types"
  },
  
  "include": [
    "./server/**/*"
  ]
}